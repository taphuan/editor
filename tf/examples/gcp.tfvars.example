cloud_provider = "gcp"
project_name   = "multi-cloud-vpc"
environment    = "dev"
region         = "us-central1"

vpc_cidr            = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24"]
private_subnet_cidrs = ["10.0.2.0/24", "10.0.3.0/24"]

jumphost_instance_type = "e2-micro"

# Optional: Provide your SSH public key, or leave empty to auto-generate
# jumphost_ssh_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB..."

enable_jumphost = true

# Multiple private VMs
private_vms = [
  {
    name          = "app-server-1"
    instance_type = "e2-micro"
    subnet_index  = 0
  },
  {
    name          = "app-server-2"
    instance_type = "e2-micro"
    subnet_index  = 0
  }
]

